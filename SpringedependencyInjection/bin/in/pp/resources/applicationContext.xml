<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean definitions -->

    <bean id="addid" class="in.pp.Address">
        <property name="houseno" value="111"/>
        <property name="city" value="mathura"/>
        <property name="pincode" value="281001"/>
    </bean>

    <bean id="stdid" class="in.pp.beans.Student">
        <property name="rollno" value="101"/>
        <property name="name" value="prabhat"/>
        <property name="address" ref="addid"/>
    </bean>

</beans>
