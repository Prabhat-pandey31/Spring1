<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Definition for Address bean -->
    <bean id="address1" class="in.pp.beans.Address">
        <constructor-arg value="222"></constructor-arg>
        <constructor-arg value="delhi"></constructor-arg>
        <constructor-arg value="21234"></constructor-arg>
    </bean>

    <!-- Definition for Student bean -->
    <bean id="stdid" class="in.pp.beans.Student">
        <constructor-arg value="102"></constructor-arg>
        <constructor-arg value="prabhat"></constructor-arg>
        <constructor-arg ref="address1"></constructor-arg>
    </bean>

</beans>

